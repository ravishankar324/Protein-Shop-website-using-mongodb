{
	"name": "ekart-application",
	"private": true,
	"description": "",
	"license": "",
	"sideEffects": false,
	"scripts": {
		"prebuild": "npm run clean && echo All clean âœ¨",
		"build": "npm run build:css && remix build",
		"build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
		"clean": "rimraf .cache ./server/dist ./build ./public/build \"./app/styles/app.css\"",
		"deploy:dev": "npm run clean && vercel",
		"deploy:prod": "npm run clean && vercel --prod",
		"dev": "concurrently \"npm run dev:css\" \"remix dev\"",
		"dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
		"postinstall": "prisma generate",
		"predev": "git fetch -q && git pull -q",
		"setup": "npx prisma db push && npx prisma db seed"
	},
